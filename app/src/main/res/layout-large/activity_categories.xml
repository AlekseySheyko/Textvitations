<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#EDEDED"
    tools:context="sheyko.aleksey.eventy.CategoryActivity"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/relativeLayout">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:paddingTop="22dp"
        android:paddingBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/location_picker_label"/>

    <TextView
        android:id="@+id/location_picker_label"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:background="#ecf0f1"
        android:text="@string/pick_image_label"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:drawablePadding="4dp"
        android:paddingRight="16dp"
        android:drawableLeft="@drawable/ic_choose_image"
        android:textColor="#34495e"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="pickImageFromGallery"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
