    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:onClick="navigateToInputActivity"
        android:background="@android:color/white"
        android:id="@+id/new_event_layout"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/create_event_image"
            android:src="@drawable/ic_new_event2"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:clickable="true"
            android:onClick="navigateToInputActivity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customized\nInvitation"
            android:textSize="22sp"
            android:paddingBottom="16dp"
            android:textColor="#414141"
            android:layout_below="@+id/create_event_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:id="@+id/create_event_hint"
            android:clickable="true"
            android:onClick="navigateToInputActivity"
            android:gravity="center_horizontal" />

    </RelativeLayout>
