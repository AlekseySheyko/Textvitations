<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sheyko.aleksey.eventy">

    <permission
        android:name="sheyko.aleksey.eventy.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>

    <uses-permission android:name="sheyko.aleksey.eventy.permission.MAPS_RECEIVE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="com.android.vending.BILLING"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/EventyTheme">
        <activity
        android:name="com.aviary.android.feather.sdk.FeatherActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:process=":aviarysdk"
        android:screenOrientation="unspecified"
        android:theme="@style/AviaryTheme.Dark"/>

        <!-- CDS Content Service -->
        <service
        android:name="com.aviary.android.feather.cds.AviaryCdsService"
        android:exported="false"
        android:process=":aviarycds">
        <!--<intent-filter>-->
        <!--<action android:name="aviary.intent.action.CDS_DOWNLOAD_START"/>-->
        <!--<action android:name="aviary.intent.action.CDS_RESTORE_USER_ITEMS"/>-->
        <!--</intent-filter>-->
        </service>

        <!-- Cds Content Provider -->
        <provider
        android:name="com.aviary.android.feather.cds.AviaryCdsProvider"
        android:authorities="sheyko.aleksey.eventy.AviaryCdsProvider"
        android:exported="false"
        android:process=":aviarycds"
        android:syncable="true"/>

        <!-- CDS Download Receiver -->
        <receiver
        android:name="com.aviary.android.feather.cds.AviaryCdsReceiver"
        android:process=":aviarycds">
        <intent-filter>
        <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
        </intent-filter>
        </receiver>

        <activity
            android:name="sheyko.aleksey.eventy.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="sheyko.aleksey.eventy.CategoryActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_categories"
            android:parentActivityName="sheyko.aleksey.eventy.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheyko.aleksey.eventy.MainActivity"/>
        </activity>
        <activity
            android:name="sheyko.aleksey.eventy.TemplateActivity"
            android:hardwareAccelerated="true"
            android:label="@string/activity_category_title"
            android:parentActivityName="sheyko.aleksey.eventy.CategoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheyko.aleksey.eventy.CategoryActivity"/>
        </activity>
        <activity
            android:name="sheyko.aleksey.eventy.InputActivity"
            android:launchMode="singleTask"
            android:hardwareAccelerated="true"
            android:label="@string/activity_input_title"
            android:parentActivityName="sheyko.aleksey.eventy.TemplateActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheyko.aleksey.eventy.TemplateActivity"/>
        </activity>
        <activity
            android:name="sheyko.aleksey.eventy.PreviewActivity"
            android:hardwareAccelerated="true"
            android:label="Preview"
            android:parentActivityName="sheyko.aleksey.eventy.InputActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheyko.aleksey.eventy.InputActivity"/>
        </activity>

        <activity
            android:name="sheyko.aleksey.eventy.MapActivity"
            android:hardwareAccelerated="true"
            android:launchMode="singleTask"
            android:label="@string/title_activity_map"
            android:parentActivityName="sheyko.aleksey.eventy.InputActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".InputActivity"/>
        </activity>

        <meta-data
            android:name="com.aviary.android.feather.v1.API_KEY"
            android:value="6bea1dd566207f91"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBUi8ISwU8ngPP2Qt8Cwqrt6m7U84aNXoA"/>
        <meta-data
            android:name="com.google.android.urlshortener.API_KEY"
            android:value="AIzaSyBUi8ISwU8ngPP2Qt8Cwqrt6m7U84aNXoA"/>
    </application>

</manifest>
